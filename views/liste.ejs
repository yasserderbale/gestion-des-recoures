<body id="body">
  <section  id="navbar1">
    <nav class="navbar bg-body-tertiary">
      <div class="container-fluid justify-content-center justify-content-md-between">
        <a style="font-family: Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif;
        font-weight: 900;
        font-size: 36px;" id="der" class="navbar-brand fw-medium fs-3 mb-1 mb-md-0">Liste des <sup>ETUDIANTES</sup> ISIL</a>

        <form action="/liste" method="post" class="d-flex" role="search">
          <input id="recherche" name="searchetext"
            class="form-control me-2"
            type="search"
            placeholder="Search"
            aria-label="Search"
          />
          <button class="btn btn-outline-success" type="submit">
            Search
          </button>
        </form>
      </div>
    </nav>

  </section>
    <div id="table"> 
      <% if (array.length==0) { %>
        <h1>no data exeiste</h1>
       <% } %>
       <% if (array.length>0) { %>
        <table style=" --bs-table-color: #fff;
        --bs-table-bg: rgba(230, 2, 2, 0.26);
        --bs-table-border-color: #30c96d7c;
        --bs-table-striped-bg: rgba(45, 162, 123, 0.542);
        --bs-table-striped-color: #fff;
        --bs-table-active-bg: #373b3e;
        --bs-table-active-color: #fff;
        --bs-table-hover-bg: #323539;
        --bs-table-hover-color: #fff;
       
      border-color: rgba(249, 0, 0, 0)" id="table2"  class=" text text-center table table-dark table-striped table m-5 table-bordered   "  >
      
      <thead><th>NOM</th>
          <th >PRENOM</th>
          <th>EMAIL</th>
          <th>GROUPE</th>
          <th>MODULE</th>
          <th>NATURE</th>
          <th>NOTE AFICHES</th>
          <th>NOTE REEL </th>
          <th>STATU </th></thead>

<tbody>
<% array.forEach(item => { %>
 <td><%=item.Nome  %></td>
 <td><%=item.Prenome  %></td>
 <td><%=item.Email  %></td>
 <td><%=item.groupe  %></td>
 <td><%=item.module  %></td>
 <td><%=item.nature  %></td>
 <td><%=item.noteafiches  %></td>
 <td><%=item.notereel  %></td>
 <td><button style="background-color: green;" class="btn btn-dark" onclick="change(this)">favorable</button>
<form action="/liste/<%=item._id %>?_method=DELETE" method="post">  <button class="btn btn-primary" type="submit">DELETE</button>
</form>
<a href="/update/<%= item._id %>" class="btn btn-primary">update</a>
</td>
</tr>
<% }) %>
</tbody>

        </table>
       <% } %>
       
        </div>

        <script src="scripte1.js"></script>
